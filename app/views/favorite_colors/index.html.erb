<h1>Your Favorite Colors</h1>

<div style="display: flex; flex-wrap: wrap; gap: 15px; margin-top: 20px;">
  <% @favorite_colors.each do |color| %>
    <div style="display: flex; flex-direction: column; align-items: center;">
      <div style="width: 100px; height: 100px; background-color: <%= color.hex %>; border-radius: 8px; border: 2px solid #333; box-shadow: 2px 2px 4px rgba(0,0,0,0.2); display: flex; align-items: center; justify-content: center;">
        <span style="color: white; font-weight: bold; text-shadow: 1px 1px 2px black;">
          <%= color.name %>
        </span>
      </div>

      <%= button_to "âŒ Remove", favorite_color_path(color), method: :delete, data: { confirm: "Are you sure?" }, style: "margin-top: 5px;" %>
    </div>
  <% end %>
</div>
