<h1>Log In</h1>

<%= form_with url: manual_login_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log In" %>
  </div>
<% end %>

<%= link_to "Forgot your password?", new_password_reset_path %>
