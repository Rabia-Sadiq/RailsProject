<h2 class="page-subtitle">Your Favorite Dresses</h2>

<div class="favorites-grid">
  <% @favorite_dresses.each do |favorite| %>
    <% product = favorite.product %>
    <% next if product.image_url.blank? || product.image_url.downcase.include?("not found") %>
    <div class="product-card favorite-card">
      <%= image_tag product.image_url, alt: product.title, class: "product-img" %>
      <h2><%= product.title %></h2>
      <p><strong>Brand:</strong> <%= product.brand %></p>
      <p><strong>Color:</strong> <%= product.color %></p>
      <p><strong>Price:</strong> PKR <%= number_with_delimiter(product.price, delimiter: ',') %></p>

      <%= button_to "❌ Remove", favorite_dress_path(favorite), method: :delete, data: { confirm: "Remove this dress?" }, class: "btn-remove" %>
    </div>
  <% end %>
</div>

<style>
  .page-subtitle {
    font-size: 28px;
    text-align: center;
    margin-top: 40px;
    margin-bottom: 20px;
    font-family: 'Georgia', serif;
    color: #4b3f2f;
  }

  .favorites-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 25px;
    margin-bottom: 40px;
  }

  .favorite-card {
    background: #fffaf3;
    border: 1px solid #e0d2b8;
    padding: 15px;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    transition: transform 0.2s, box-shadow 0.2s;
    font-family: 'Georgia', serif;
  }

  .favorite-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 15px rgba(0,0,0,0.1);
  }

  .btn-remove {
    margin-top: 10px;
    background-color: #b05454;
    color: white;
    border: none;
    padding: 8px 14px;
    border-radius: 6px;
    font-weight: bold;
    cursor: pointer;
    font-family: 'Georgia', serif;
  }

  .btn-remove:hover {
    background-color: #7d3737;
  }
</style>
