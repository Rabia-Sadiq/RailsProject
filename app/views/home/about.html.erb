        .hero-subtitle {
            font-size: 1.3rem;
            color: #9f1239;
            margin-bottom: 40px;
            line-height: 1.6;
            opacity: 0.9;
        }

        .cta-buttons {
            display: flex;
            flex-direction: column;
            gap: 20px;
            align-items: flex-start;
        }

        .btn {
            padding: 18px 40px;
            border: none;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            min-width: 220px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .btn-primary {
            background: linear-gradient(135deg, #d194b3, #c08299);
            color: white;
            box-shadow: 0 10px 30px rgba(209, 148, 179, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(209, 148, 179, 0.4);
            background: linear-gradient(135deg, #c08299, #af7189);
        }

        .btn-secondary {
            background: linear-gradient(135deg, #fefcff, #ffffff);
            color: #9f1239;
            border: 2px solid #d194b3;
            box-shadow: 0 8px 25px rgba(209, 148, 179, 0.15);
        }

        .btn-secondary:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(209, 148, 179, 0.25);
            background: linear-gradient(135deg, #ffffff, #fefcff);
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn:hover::before {
            left: 100%;
        }

        .visual-section {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .mirror-container {
            position: relative;
            width: 400px;
            height: 500px;
        }

        .digital-mirror {
            width: 300px;
            height: 450px;
            background: linear-gradient(135deg, #f8fafc, #e2e8f0);
            border-radius: 30px;
            border: 3px solid #d194b3;
            position: absolute;
            right: 0;
            top: 25px;
            box-shadow: 0 20px 60px rgba(209, 148, 179, 0.2);
            overflow: hidden;
        }

        .mirror-glow {
            position: absolute;
            top: -5px;
            left: -5px;
            right: -5px;
            bottom: -5px;
            background: linear-gradient(45deg, #d194b3, #c08299, #af7189, #9f1239);
            border-radius: 35px;
            z-index: -1;
            opacity: 0.3;
            animation: pulse 3s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 0.3; transform: scale(1); }
            50% { opacity: 0.5; transform: scale(1.02); }
        }

        .mirror-screen {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #fefcff, #f8fafc);
            border-radius: 27px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: #9f1239;
            opacity: 0.7;
        }

        .stylish-woman {
            width: 250px;
            height: 400px;
            background: linear-gradient(135deg, #fce7f3, #f3e8ff);
            border-radius: 20px;
            position: absolute;
            left: 0;
            top: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 15px 50px rgba(139, 92, 246, 0.15);
            overflow: hidden;
        }

        .woman-silhouette {
            width: 180px;
            height: 320px;
            background: linear-gradient(135deg, #c08299, #9f1239);
            border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
            position: relative;
            opacity: 0.8;
        }

        .woman-silhouette::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 60px;
            background: #d194b3;
            border-radius: 50%;
        }

        .woman-silhouette::after {
            content: '';
            position: absolute;
            bottom: 80px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 120px;
            background: #af7189;
            border-radius: 50px 50px 0 0;
        }

        .features {
            text-align: center;
            padding: 80px 0;
            background: rgba(255, 255, 255, 0.5);
            backdrop-filter: blur(10px);
            margin-top: 20px;
            border-radius: 30px;
        }

        .features-title {
            font-size: 2.5rem;
