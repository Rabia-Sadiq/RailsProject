<!-- app/views/pages/home.html.erb -->

<% content_for :title, "Color&Fit - Discover Your Perfect Style" %>

<!-- Navigation -->
<nav class="navbar">
  <div class="nav-container">
    <div class="logo">COLOR&FIT</div>
    <ul class="nav-links">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Outfit of the Day", ootd_path %></li>
      <li><%= link_to "Wishlist", favorite_dresses_path %></li>
      <li><%= link_to "Login", new_user_session_path %></li>
      <li><%= link_to "SignUp", new_user_registration_path %></li>


    </ul>
    <div class="mobile-menu" onclick="toggleMobileMenu()">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  <div class="nav-mobile" id="mobileNav">
    <%= link_to "Home", root_path %>
    <%= link_to "About", about_path %>
    <%= link_to "Outfit of the Day", outfit_of_the_day_path %>
    <%= link_to "Wishlist", favorite_dresses_path %>
    <li><%= link_to "Login", new_user_session_path %></li>
    <li><%= link_to "SignUp", new_user_registration_path %></li>
  </div>
</nav>

<!-- Main Content -->
<div class="main-container">
  <div class="devices-showcase">
    <!-- Mobile Device -->
    <div class="mobile-device">
      <div class="mobile-frame">
        <div class="mobile-screen">
          <div class="brand-header">
            <div class="brand-name">COLOR&FIT</div>
            <h1 class="main-title">Discover Your Perfect Colors & Fit</h1>
          </div>
          
          <div class="cta-buttons">
            <%= link_to "Start Color Quiz", new_color_quiz_path, class: "btn btn-primary" %>
            <%= link_to "Find Your Size", size_finder_path, class: "btn btn-secondary" %>
          </div>

          <div class="models-container">
            <div class="model-group">
              <div class="model model-1"></div>
              <div class="model model-2"></div>
              <div class="model model-3"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Laptop Device -->
    <div class="laptop-device">
      <div class="laptop-frame">
        <div class="laptop-screen">
          <div class="brand-header">
            <div class="brand-name">COLOR&FIT</div>
            <h1 class="main-title">Discover Your Perfect Colors & Fit</h1>
          </div>
          
          <div class="cta-buttons">
            <%= link_to "Start Color Quiz", new_color_quiz_path, class: "btn btn-primary" %>
            <%= link_to "Find Your Size", size_finder_path, class: "btn btn-secondary" %>
          </div>

          <div class="models-image"></div>
        </div>
      </div>
      <div class="laptop-base"></div>
    </div>
  </div>
</div>

<%= content_for :javascript do %>
  <script>
    function toggleMobileMenu() {
      const mobileNav = document.getElementById('mobileNav');
      mobileNav.classList.toggle('active');
    }

    // Close mobile menu when clicking outside
    document.addEventListener('click', function(event) {
      const mobileMenu = document.querySelector('.mobile-menu');
      const mobileNav = document.getElementById('mobileNav');
      
      if (!mobileMenu.contains(event.target) && !mobileNav.contains(event.target)) {
        mobileNav.classList.remove('active');
      }
    });

    // Smooth scrolling for navigation links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth'
          });
        }
      });
    });
  </script>
<% end %>