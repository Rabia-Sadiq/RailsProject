        <div class="nav-container">
            <a href="#" class="nav-logo">Color&Fit</a>
            <ul class="nav-menu">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link " %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Quiz", undertone_quiz_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "OOTD", ootd_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "WishList", favorite_dresses_path, class: "nav-link" %></li>

          <li class="nav-item"><%= link_to "Profile", profile_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Login", new_user_session_path, class: "nav-link active" %></li>
          <li class="nav-item"><%= link_to "SignUp", new_user_registration_path, class: "nav-link active" %></li>

          </ul>
            <button class="mobile-menu-btn">â˜°</button>
        </div>
    </nav>

    <div class="container">

        <main class="main-content">
            <section class="hero-text">
                <h1 class="hero-title">Discover Your Perfect Colors & Fit</h1>
                <p class="hero-subtitle">Let our AI-powered fashion stylist analyze your preferences and create personalized looks that make you shine. Your journey to effortless elegance starts here.</p>
                
                <div class="cta-buttons">
                <%= link_to "Start Quiz", undertone_quiz_path, class: "btn btn-primary" %>
                <%= link_to "Discover Your Color Palette", palette_path, class: "btn btn-secondary" %>

                
                </div>
            </section>

            <section class="visual-section">
                <div class="mirror-container">
                    <img class="digital-mirror" src="/images/hero.png" alt="Digital Mirror Image" />

                    
                    <div class="digital-mirror">
