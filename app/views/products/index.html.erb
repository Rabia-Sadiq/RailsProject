<h1>
  Products<%= " in #{params[:color].strip.titleize}" if params[:color].present? %>
</h1>

<% if @products.any? %>
  <div style="display: flex; flex-wrap: wrap; gap: 20px;">
    <% @products.each do |product| %>
      <div style="border: 1px solid #ccc; padding: 10px; width: 200px;">
        <%= image_tag product.image_url, width: 180, height: 200 if product.image_url.present? %>
        <h4><%= product.title %></h4>
        <p><strong>Brand:</strong> <%= product.brand %></p>
        <p><strong>Color:</strong> <%= product.color %></p>
        <p><strong>Price:</strong> PKR <%= product.price %></p>
        
        <% if product.link.nil? %>
          <div style="color: red; background-color: yellow; padding: 5px; border-radius: 5px;">
            <strong>Dress Missing!</strong>
          </div>
        <% else %>
          <%= link_to "View Product", product.link, target: "_blank" %>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No products found for this color.</p>
<% end %>
