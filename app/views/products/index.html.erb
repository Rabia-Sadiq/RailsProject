<h1 class="page-title">
  Products<%= " in #{params[:color].strip.titleize} (#{@products.count})" if params[:color].present? %>
</h1>
<%= link_to "Smart OOTD", ootd_path, class: "nav-link" %>

<%= form_with url: products_path, method: :get, local: true do %>
  <%= hidden_field_tag :color, params[:color] %>

  <div>
    <label>Brand:</label>
    <%= text_field_tag :brand, params[:brand] %>
  </div>

  <div>
    <label>Description:</label>
    <%= text_field_tag :description, params[:description] %>
  </div>

  <div>
    <label>Min Price:</label>
    <%= number_field_tag :min_price, params[:min_price] %>
  </div>

  <div>
    <label>Max Price:</label>
    <%= number_field_tag :max_price, params[:max_price] %>
  </div>

  <%= submit_tag 'Apply Filters' %>
<% end %>
<%= form_with url: products_path, method: :get, local: true do %>
  <%= hidden_field_tag :color, params[:color] %>
  <%= hidden_field_tag :brand, params[:brand] %>
  <%= hidden_field_tag :description, params[:description] %>
  <%= hidden_field_tag :min_price, params[:min_price] %>
  <%= hidden_field_tag :max_price, params[:max_price] %>

  <div>
    <label>Sort By:</label>
    <%= select_tag :sort_by, options_for_select([
        ['Newest', 'newest'],
        ['Oldest', 'oldest'],
        ['Price: Low to High', 'price_asc'],
        ['Price: High to Low', 'price_desc']
      ], selected: params[:sort_by]) %>
  </div>

  <%= submit_tag 'Apply Sorting' %>
<% end %>

<% if @products.any? %>
  <div class="product-grid">
    <% @products.each do |product| %>
      <div class="product-card">
        <%= image_tag product.image_url, class: 'product-image' if product.image_url.present? %>
        <h4 class="product-title"><%= product.title %></h4>
        <p><strong>Brand:</strong> <%= product.brand %></p>
        <p><strong>Color:</strong> <%= product.color %></p>
        <p><strong>Price:</strong> PKR <%= number_to_currency(product.price) %></p>

        <% if product.link.present? %>
          <%= link_to "View Product", product.link, target: "_blank", class: 'view-product-link' %>
        <% end %>
        <%= button_to "❤️ Favorite", favorite_dresses_path(product_id: product.id), method: :post %>

      </div>
     

    <% end %>
  </div>
  <%= link_to "My Favorite Dresses", favorite_dresses_path %>

<% else %>
  <p>No products found for this color.</p>
<% end %>

<style>
  .page-title {
    font-size: 2em;
    text-align: center;
    margin-bottom: 20px;
    color: #333;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
    padding: 0 20px;
  }

  .product-card {
    border: 1px solid #ccc;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    text-align: center;
    transition: transform 0.2s ease-in-out;
  }

  .product-card:hover {
    transform: translateY(-5px);
  }

  .product-image {
    width: 180px;
    height: 200px;
    object-fit: cover;
    margin-bottom: 15px;
  }

  .product-title {
    font-size: 1.1em;
    color: #333;
    margin: 10px 0;
  }

  .view-product-link {
    display: inline-block;
    background-color: #007bff;
    color: #fff;
    padding: 8px 15px;
    border-radius: 5px;
    text-decoration: none;
    margin-top: 15px;
  }

  .view-product-link:hover {
    background-color: #0056b3;
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const filterSelect = document.getElementById("filter-type");
    const brandField = document.getElementById("brand-field");
    const descriptionField = document.getElementById("description-field");
    const priceField = document.getElementById("price-field");
    const sortField = document.getElementById("sort-field");

    filterSelect.addEventListener("change", function () {
      const value = this.value;

      // Hide all fields
      brandField.style.display = "none";
      descriptionField.style.display = "none";
      priceField.style.display = "none";
      sortField.style.display = "none";

      // Show selected one
      if (value === "brand") brandField.style.display = "block";
      else if (value === "description") descriptionField.style.display = "block";
      else if (value === "price") priceField.style.display = "block";
      else if (value === "sort") sortField.style.display = "block";
    });
  });
</script>
