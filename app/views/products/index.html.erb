<h1 class="page-title">
  Products<%= " in #{params[:color].strip.titleize}" if params[:color].present? %>
</h1>

<% if @products.any? %>
  <div class="product-grid">
    <% @products.each do |product| %>
      <div class="product-card">
        <%= image_tag product.image_url, class: 'product-image' if product.image_url.present? %>
        <h4 class="product-title"><%= product.title %></h4>
        <p><strong>Brand:</strong> <%= product.brand %></p>
        <p><strong>Color:</strong> <%= product.color %></p>
        <p><strong>Price:</strong> PKR <%= number_to_currency(product.price) %></p>
        
        <% if product.link.present? %>
          <%= link_to "View Product", product.link, target: "_blank", class: 'view-product-link' %>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No products found for this color.</p>
<% end %>

<style>
  .page-title {
    font-size: 2em;
    text-align: center;
    margin-bottom: 20px;
    color: #333;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
    padding: 0 20px;
  }

  .product-card {
    border: 1px solid #ccc;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    text-align: center;
    transition: transform 0.2s ease-in-out;
  }

  .product-card:hover {
    transform: translateY(-5px);
  }

  .product-image {
    width: 180px;
    height: 200px;
    object-fit: cover;
    margin-bottom: 15px;
  }

  .product-title {
    font-size: 1.1em;
    color: #333;
    margin: 10px 0;
  }

  .view-product-link {
    display: inline-block;
    background-color: #007bff;
    color: #fff;
    padding: 8px 15px;
    border-radius: 5px;
    text-decoration: none;
    margin-top: 15px;
  }

  .view-product-link:hover {
    background-color: #0056b3;
  }
</style>
